						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.environment.set(\"auth_token\", jsonData.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
